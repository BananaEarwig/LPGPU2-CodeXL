<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Label="UserMacros">
    <COMMONDIR>$(SolutionDir)..\..\Common</COMMONDIR>
    <CommonProjectsDir>$(SolutionDir)..\..\Common\Src</CommonProjectsDir>
    <AMDTOutputDir>$(SolutionDir)..\Output\</AMDTOutputDir>
    <AMDTCommonAMD>$(COMMONDIR)\Lib\AMD\</AMDTCommonAMD>
    <AMDTCommonExt>$(COMMONDIR)\Lib\Ext\</AMDTCommonExt>
    <AMDTPowerProfilingDir>$(SolutionDir)..\Components\PowerProfiling\</AMDTPowerProfilingDir>
  </PropertyGroup>
  <ImportGroup Label="AMDTBaseProjects">
    <Import Project="$(SolutionDir)\..\Components\CodeXLComponent.props" />
    <Import Project="$(AMDTCommonExt)\Qt\Global-QT.props" />
    <Import Project="$(AMDTCommonExt)\QScintilla\Global-QScintilla.props" />
    <Import Project="$(AMDTCommonExt)\tinyxml\Global-TinyXML-2015.props" />
  </ImportGroup>
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>.;$(AMDTCommonExt)SPIRV-Tools\2018.0\include;$(AMDTPowerProfilingDir)..\CpuProfiling;$(AMDTPowerProfilingDir);$(AMDTPowerProfilingDir)MiddleTier\;$(AMDTPowerProfilingDir)Backend\;$(AMDTPowerProfilingDir)Backend\AMDTPowerProfileAPI\inc\;$(CommonProjectsDir)\AMDTCommonHeaders\;$(SolutionDir)\..\Remote;$(SolutionDir)\..;$(SolutionDir)\..\Components;$(SolutionDir)\..\Components\DatabaseLayer;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ClCompile>
    <Link>
      <AdditionalDependencies>CXLBaseTools$(GDTProjectSuffix).lib;CXLOSWrappers$(GDTProjectSuffix).lib;CXLApplicationFramework$(GDTProjectSuffix).lib;CXLCpuProfiling$(GDTProjectSuffix).lib;LPGPU2Database$(GDTProjectSuffix).lib;LPGPU2FeedbackEngine$(GDTProjectSuffix).lib;%(AdditionalDependencies)</AdditionalDependencies>
      <AdditionalLibraryDirectories>$(AMDTCommonExt)SPIRV-Tools\2018.0\lib;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
    </Link>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="COMMONDIR">
      <Value>$(COMMONDIR)</Value>
    </BuildMacro>
    <BuildMacro Include="CommonProjectsDir">
      <Value>$(CommonProjectsDir)</Value>
    </BuildMacro>
    <BuildMacro Include="AMDTOutputDir">
      <Value>$(AMDTOutputDir)</Value>
    </BuildMacro>
    <BuildMacro Include="AMDTCommonAMD">
      <Value>$(AMDTCommonAMD)</Value>
    </BuildMacro>
    <BuildMacro Include="AMDTCommonExt">
      <Value>$(AMDTCommonExt)</Value>
    </BuildMacro>
    <BuildMacro Include="AMDTPowerProfilingDir">
      <Value>$(AMDTPowerProfilingDir)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>